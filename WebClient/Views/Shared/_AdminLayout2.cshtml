<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Мушкетёры, вперёд!</title>
    <link href="~/css/global-varriables.css" rel="stylesheet" />
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link href="~/css/projects-style.css" rel="stylesheet" />
    <link href="~/css/services-style.css" rel="stylesheet" />
    <link href="~/css/admin-style.css" rel="stylesheet" />
</head>
<body class="body">
    <header class="header admin-header">
        <div class="container">
            <div class="header__content">
                <h2 class="admin-header__title">Admin</h2>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <div class="main__content">
                <div class="main__left">
                    <nav class="nav">
                        <ul class="nav__items vertical-menu">
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Orders" asp-action="ReadAll">Рабочий стол</a></li>
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Home" asp-action="Main">Главная</a></li>
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Projects" asp-action="ReadAll">Проекты</a></li>
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Services" asp-action="ReadAll">Услуги</a></li>
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Articles" asp-action="ReadAll">Блог</a></li>
                            <li class="nav__item vertical-menu__item"><a class="nav__link" asp-controller="Contacts" asp-action="Read">Контакты</a></li>
                        </ul>
                    </nav>
                </div>

                <div class="main__right">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
    </footer>
</body>
</html>

<script src="~/js/site.js"></script>
