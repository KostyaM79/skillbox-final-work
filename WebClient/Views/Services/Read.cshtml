@model ServiceModel

@if (User.Identity.IsAuthenticated)
{
    Layout = "_AdminLayout2";
}
else
{
    Layout = "_GuestLayout2";
}

<div class="content">
    <h2 class="title">Услуга</h2>

    <form class="service-frm" asp-controller="Services" asp-action="Update" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <span class="frm-title">Редактирование услуги</span>

        <div class="frm-item">
            <label class="frm-item__label">Название услуги</label>
            <input class="frm-input" type="text" name="ServiceTitle" placeholder="Название услуги" value="@Model.ServiceTitle" />
        </div>

        <div class="frm-item">
            <label class="frm-item__label">Описание</label>
            <textarea class="frm-input" name="ServiceDescr" placeholder="Описание">@Model.ServiceDescr</textarea>
        </div>

        <button class="btn service-frm__btn">Сохранить</button>
    </form>
</div>