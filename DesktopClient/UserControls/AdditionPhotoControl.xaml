<UserControl x:Name="userControl" x:Class="DesktopClient.UserControls.AdditionPhotoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#aaa">
        <TextBlock Text="Добавить фото" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-100"/>
        <Image x:Name="img" Width="{Binding Width, ElementName=userControl}" Height="{Binding Height, ElementName=userControl}" Source="{Binding ArticleImage}"/>
    </Grid>
</UserControl>
